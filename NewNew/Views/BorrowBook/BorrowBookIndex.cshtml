@model List<NewNew.Models.Domain.BookBorrow>

<h1>Borrowed Books</h1>

<div class="card mb-4 mt-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        All Book Categories
        <a href="@Url.Action("Index", "Home")" class="float-end btn btn-info">--Home</a>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="datatablesSimple" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Member Name </th>
                        <th>Book CopyName</th>
                        <th>Book Borrowed Date</th>
                        <th>Book Due Date</th>
                        <th>isReturned</th>
                        <th>isNotified</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Member Name </th>
                        <th>Book CopyName</th>
                        <th>Book Borrowed Date</th>
                        <th>Book Due Date</th>
                        <th>isReturned</th>
                        <th>isNotified</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @{
                        int counter = 1;
                    }
                    @foreach (var borrow in Model)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@borrow.memberFullName</td>
                            <td>@borrow.bookTitle</td>

                            <td>@borrow.borrowBookDate.ToString("MM/dd/yyyy")</td>
                            <td>@borrow.borrowDueDate.ToString("MM/dd/yyyy")</td>
                            <td>@((bool)borrow.isReturned ? "Yes" : "No")</td>
                            <td> @((bool)borrow.isNotified ? "Yes" : "No")</td>
                            
                           
                            
                            <td><a href="@Url.Action("View", "BorrowBook", new { id = borrow.borrowBookId })" class="btn btn-info">Edit</a></td>

                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="~/js/scripts.js"></script>
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
<script src="~/js/datatables-simple-demo.js"></script>
