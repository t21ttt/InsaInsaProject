@model NewNew.Models.UpdateBookBorrowViewModel


<h1>Edit BookBorrow</h1>

<div class="card mb-4 mt-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
       Edit Books
        <a href="@Url.Action("BorrowBookIndex", "BorrowBook")" class="float-end btn btn-sm btn-success">View All</a>

    </div>

    <div class="card-body">
       
        <form method="post" action="View" class="mt-5">
            <table class="table table-bordered">
         <tr>
                    <th> Borrow BookId</th>
                    <td>
                        <input type="text" class="form-control" asp-for="borrowBookId" reedonly />
                    </td>
         </tr>
                <tr>
                    <th>Borrow Book Date</th>
                    <td>
                        <input type="date" class="form-control" asp-for="borrowBookDate" reedonly />
                    </td>
                </tr>

                <tr>
                    <th>Borrow Book DueDate</th>
                    <td>
                        <input type="date" class="form-control" asp-for="borrowDueDate" reedonly />
                    </td>
                </tr>


                <tr>
                    <th>Is Returned?</th>
                    <td>
                        <div>
                            <select asp-for="isReturned" class="form-control">
                                <option value="true">True</option>
                                <option value="false">False</option>
                            </select>
                        </div>
                    </td>
                </tr>



                <tr>
                    <th>Book CopyId</th>
                    <td>
                        <input type="text" class="form-control" asp-for="bookCopyId" reedonly />
                    </td>
                </tr>

                <tr>
                    <th>Member Id</th>
                    <td>
                        <input type="text" class="form-control" asp-for="memberId" reedonly />
                    </td>
                </tr>

               
                   <tr>
                        <td colspan="2">
                            <input type="submit"  class="btn btn-primary" value="Submit"/>
                        <button type="submit" class="btn btn-danger" asp-action="Delete"
                                asp-controller="BorrowBook">
                            Delete
                        </button>
                        </td>
                 
                    </tr>
              
                    </table>
                </form>

    </div>
</div>
















