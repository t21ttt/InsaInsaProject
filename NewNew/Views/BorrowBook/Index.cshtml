@model List<NewNew.Models.Domain.BookBorrow>

<h1>Borrowed Books</h1>

<div class="card mb-4 mt-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        All Book Categories
        <a href="@Url.Action("Add", "BorrowBook")" class="float-end btn btn-info">Add New</a>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="datatablesSimple" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Book Borrowed Date</th>
                        <th>Book Due Date</th>
                        <th>isReturned</th>
                        <th>isNotified</th>
                        <th>Book CopyId</th>
                        <th>Member Id</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Book Borrowed date</th>
                        <th>Book Due date</th>
                        <th>Is Returned</th>
                        <th>isNotified</th>
                        <th>Book CopyId</th>
                        <th>Member ID</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var borrow in Model)
                    {
                        <tr>
                            <td>@borrow.borrowBookId</td>
                            <td>@borrow.borrowBookDate</td>
                            <td>@borrow.borrowDueDate</td>
                            <td>@borrow.isReturned</td>
                            <td>@borrow.isNotified</td>
                            <td>@borrow.bookCopyId</td>
                            <td>@borrow.memberId</td>
                            <td><a href="@Url.Action("View", "BorrowBook", new { id = borrow.borrowBookId })" class="btn btn-info">View</a></td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="~/js/scripts.js"></script>
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
<script src="~/js/datatables-simple-demo.js"></script>
