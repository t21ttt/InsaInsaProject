@model NewNew.Models.UpdatePublisherViewModel

<form method="post" action="View" class="mt-5">

    <div class="mb-3">
        <label for="" class="form-label">Publisher Id</label>
        <input type="text" class="form-control" asp-for="PublisherId" reedonly />
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Publisher Name</label>
        <input type="text" class="form-control" asp-for="publisherName" />
    </div>
    <div class="mb-3"> 
        <label for="" class="form-label">Publisher Address</label>
        <input type="text" class="form-control" asp-for="publisherAddress"/>

    </div>

    <button type="submit" class=" btn btn-primary">Submit</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete"
            asp-controller="Publisher">
        Delete
    </button>

</form>