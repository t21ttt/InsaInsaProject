@model List<NewNew.Models.Domain.BookCopy>;

<h1>List Of Book Copies</h1>

<div class="card mb-4 mt-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        All Book Copies
        <a href="@Url.Action("Add", "BookCopy")" class="float-end btn btn-info">Add New</a>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="datatablesSimple" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>#</th>

                        <th>Book Name </th>
                        <th> Publisher Name </th>
                        <th>Year Of Published</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                       
                       
                        <th>Book Name </th>
                        <th> Publisher Name </th>
                       <th>Year Of Published</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @{
                        int counter = 1;
                    }
                    @foreach (var bCopy in Model)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@bCopy.bookTitle</td>
                            <td>@bCopy.publisherName</td>
                            <td>@bCopy.yearOfPublished.ToString("MM/dd/yyyy")</td>
                          
                         

                            <td><a href="@Url.Action("View", "BookCopy", new { id = bCopy.bookCopyId })" class="btn btn-info">Edit</a></td>

                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="~/js/scripts.js"></script>
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
<script src="~/js/datatables-simple-demo.js"></script>
