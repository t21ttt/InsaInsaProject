@model List<NewNew.Models.Domain.FinePayment>

<h1>Fine Payments</h1>

<div class="card mb-4 mt-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        All Fine Payment Books
        <a href="@Url.Action("Add", "FinePayment")" class="float-end btn btn-info">Add New</a>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="datatablesSimple" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Fine Payment Amount</th>
                        <th>Fine Payment Date</th>
                        <th>Member Id</th>
                        <th>Fine Id</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Fine Payment Amount</th>
                        <th>Fine Payment Date</th>
                        <th>Member Id</th>
                        <th>Fine Id</th>

                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var payments in Model)
                    {
                        <tr>
                            <td>@payments.finePaymentAmount</td>
                            <td>@payments.finePaymentDate</td>
                            <td><a href="@Url.Action("View", "FinePayment", new { id = payments.finePaymentId })" class="btn btn-info">View</a></td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="~/js/scripts.js"></script>
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
<script src="~/js/datatables-simple-demo.js"></script>
