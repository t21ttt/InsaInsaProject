@model NewNew.Models.UpdateMemberViewModel



<h1>Edit Member</h1>

<div class="card mb-4 mt-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Edit Member
        <a href="@Url.Action("Index", "member")" class="float-end btn btn-sm btn-success">View All</a>

    </div>

    <div class="card-body">

        <form method="post" action="View" class="mt-5">
            <table class="table table-bordered">
                <tr>
                    <th>Member Id</th>
                    <td>
                        <input type="text" class="form-control" asp-for="memberId" reedonly />
                    </td>
                </tr>
                <tr>
                    <th>Member Full Name</th>
                    <td>
                        <input type="text" class="form-control" asp-for="memberFullName" reedonly />
                    </td>
                </tr>

                <tr>
                    <th>Gender</th>
                    <td>
                        <input type="text" class="form-control" asp-for="gender" reedonly />
                    </td>
                </tr>


                <tr>
                    <th>Email</th>
                    <td>
                        <input type="text" class="form-control" asp-for="email" reedonly />
                    </td>
                </tr>


                <tr>
                    <th>Phone Number</th>
                    <td>
                        <input type="text" class="form-control" asp-for="phoneNumber" reedonly />
                    </td>
                </tr>

                <tr>
                    <th>Member Password</th>
                    <td>
                        <input type="text" class="form-control" asp-for="memberPassword" reedonly />
                    </td>
                </tr>


                <tr>
                    <td colspan="2">
                        <input type="submit" class="btn btn-primary" value="Submit" />
                       
                       
                    </td>

                </tr>

            </table>
        </form>

    </div>
</div>






















