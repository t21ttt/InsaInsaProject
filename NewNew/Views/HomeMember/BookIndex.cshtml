@model List<NewNew.Models.Domain.Book>

<h1>All Recorded Books</h1>
<div class="card mb-4 mt-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Books
        <a href="@Url.Action("Index", "HomeMember")" class="float-end btn btn-info">Back Home</a>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="datatablesSimple" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Book Id</th>
                        <th>Book Title</th>
                       
                        @*<th>Book Descreption</th>*@
                       @* <th>Book Amount</th>*@
                        <th>Book Category</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Book Id</th>
                        <th>Book Title</th>
                       
                      @*  <th>Book Descreption</th>*@
                      @*  <th>Book Amount</th>*@
                        <th>Book Category</th>
                        <th>Action</th>

                    </tr>
                </tfoot>
                <tbody>
                    @{
                        int counter = 1;
                    }
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@book.bookTitle</td>
                          
                           @* <td>@book.bookDiscreption</td>*@
                          @*  <td>@book.bookAmount</td>*@
                            <td>@book.categoryName </td>

                            <td><a href="@Url.Action("Detail", "HomeMember", new { id = book.bookId })" class="btn btn-info">View Detail</a></td>

                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="~/js/scripts.js"></script>
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
<script src="~/js/datatables-simple-demo.js"></script>
