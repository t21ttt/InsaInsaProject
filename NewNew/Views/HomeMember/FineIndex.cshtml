@model List<NewNew.Models.Domain.Fine>

<h1>All Fined Books</h1>

<div class="card mb-4 mt-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        All Fined Books
        <a href="@Url.Action("Index", "HomeMember")" class="float-end btn btn-primary">Back Home</a>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="datatablesSimple" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Fine Amount</th>
                        <th>Fine Date</th>
                        <th>BorrowBookId</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Fine Amount</th>
                        <th>Fine Date</th>
                        <th>BorrowBookId</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                
                    @foreach (var fine in Model)
                    {
                        <tr>
                            <td>@fine.FineId</td>
                            <td>@fine.FineAmount birr</td>
                            <td>@fine.FineDate.ToString("MM/dd/yyyy")</td>
                            <td>@fine.borrowBookId</td>
                            <td><a href="@Url.Action("Index", "HomeMember", new { id = fine.FineId})" class="btn btn-primary">Back Home</a></td>
                             
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="~/js/scripts.js"></script>
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
<script src="~/js/datatables-simple-demo.js"></script>
