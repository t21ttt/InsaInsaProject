    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4"> Member Dashboard</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Member Dashboard</li>
            </ol>
            <div class="row mb-4 justify-content-center mt-4">
                <div class="col-xl-3 col-md-6 mr-4">
                    <div class="card bg-dark text-white mb-4 custom-card-width" style="height: 200px;">
                        <div class="card-body">Borrow Book</div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <a class="small text-white stretched-link" href="@Url.Action("Add","HomeMember")">View Details</a>
