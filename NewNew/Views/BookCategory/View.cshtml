@model NewNew.Models.UpdateBookCategoryViewModel

<form method="post" action="View" class="mt-5">

    <div class="mb-3" style="display: none;">
        <label for="" class="form-label">BookCategory Id</label>
        <input type="text" class="form-control" asp-for="bookCategroryId" reedonly />
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Book Category Name</label>
        <input type="text" class="form-control" asp-for="categoryName" />
    </div>

   
    <button type="submit" class=" btn btn-primary">Submit</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete"
            asp-controller="BookCategory">
        Delete
    </button>
    <div>
        @ViewBag.Message
    </div>

</form>