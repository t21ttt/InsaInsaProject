@model List<NewNew.Models.Domain.Author>

<h1>Book Authors</h1>

<div class="card mb-4 mt-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        All Book Authors
        <a href="@Url.Action("Add", "Author")" class="float-end btn btn-info">Add New</a>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="datatablesSimple" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Author FullName</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Author FullName</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @{
                        int counter = 1;
                    }
                    @foreach (var author in Model)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@author.authorFullName</td>
                            <td>@author.email</td>
                            <td><a href="@Url.Action("View", "Author", new { id = author.authorId})" class="btn btn-info">Edit</a></td>

                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="~/js/scripts.js"></script>
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
<script src="~/js/datatables-simple-demo.js"></script>
